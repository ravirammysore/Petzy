@page
@model WebApp.Pages.Pets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="my-4">Create a new pet</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="Pet.Name"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.City"></label>
                <input asp-for="Pet.City" class="form-control" />
                <span asp-validation-for="Pet.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.AgeInMonths"></label>
                <input asp-for="Pet.AgeInMonths" class="form-control" />
                <span asp-validation-for="Pet.AgeInMonths" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Pet.IsVaccinated" class="form-check-input" />
                <label asp-for="Pet.IsVaccinated"> </label>
            </div>
            <div class="form-group">
                <label asp-for="Pet.PetType"></label>
                <select asp-for="Pet.PetType" asp-items="Model.DropDownItems" class="form-control"></select>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Create</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
