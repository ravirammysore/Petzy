@page
@model WebApp.Pages.Pets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <h1>Details</h1>

    <h4>About @Model.Pet.Name</h4>

    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.Name
        </dd>

        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.City
        </dd>

        <dt class="col-sm-2">
            IsVaccinated
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.IsVaccinated
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.AgeInMonths)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.AgeInMonths)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.PetType)
        </dt>
        <dd class="col-sm-10">
            @Model.Pet.PetType
        </dd>
    </dl>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Pet?.Id">Edit</a> |
        <a asp-page="Index">Back to List</a>
    </div>
</div>
