@page
@model WebApp.Pages.Pets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="my-3">Welcome to Petzy!</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].Id)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].City)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].IsVaccinated)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].AgeInMonths)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].Breed.Name)</th>
            <th>@Html.DisplayNameFor(m=>m.Pets[0].Gender)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var pet in Model.Pets)
        {
            <tr>
                <td>@Html.DisplayFor(m=>pet.Id)</td>
                <td>@Html.DisplayFor(m=>pet.Name)</td>
                <td>@Html.DisplayFor(m=>pet.City)</td>
                <td>@Html.DisplayFor(m=>pet.IsVaccinated)</td>
                <td>@Html.DisplayFor(m=>pet.AgeInMonths)</td>
                <th>@(pet.Breed?.Name ?? "NA")</th>
                <td>@Html.DisplayFor(m=>pet.Gender)</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@pet.Id">Details</a> |
                    <a asp-page="./Edit" asp-route-id="@pet.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@pet.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>